<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ORDER DETAILS"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:background="@color/skyblue"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="Please Write Your Shipment Details"
        android:textAlignment="center"
        android:textColor="@color/button"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="700dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="105dp"
                        android:layout_height="40dp"
                        android:text=" Name :"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:hint="Enter Your  Name"
                        android:inputType="textPersonName"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="105dp"
                        android:layout_height="40dp"
                        android:text="Mobile No:"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_marginTop="50dp"
                        android:textStyle="bold"/>
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="50dp"
                        android:hint="Enter Your Mobile No"
                        android:inputType="textPersonName"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="105dp"
                        android:layout_height="40dp"
                        android:text="City :"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_marginTop="100dp"
                        android:textStyle="bold"/>
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:hint="Enter Your City Name"
                        android:layout_marginTop="105dp"
                        android:inputType="textPersonName"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="98dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="160dp"
                        android:text="Colony :"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:hint="Enter Your Colony Name"
                        android:layout_marginTop="165dp"
                        android:inputType="textPersonName"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Flat Details:"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_marginTop="215dp"
                        android:textStyle="bold"/>
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:hint="Enter Your Flat Details"
                        android:layout_marginTop="215dp"
                        android:inputType="textPersonName"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="PINCODE :"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20dp"
                        android:layout_marginTop="270dp"
                        android:textStyle="bold"/>
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:hint="Enter Your Pincode No"
                        android:layout_marginTop="270dp"
                        android:inputType="textPersonName"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/btnLogin"
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="115dp"
                    android:layout_marginBottom="110dp"
                    android:background="@drawable/custom_button"
                    android:text="Payment Option"
                    android:textColor="@color/skyblue"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="390dp"
                    android:layout_marginStart="100dp">
                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="COD" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Net Banking" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="74dp"
                        android:layout_height="wrap_content"
                        android:text="ATM"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                </RadioGroup>

                <Button
                    android:id="@+id/placeorder"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_button"
                    android:text="SUBMIT"
                    android:textColor="@color/button"
                    android:textSize="20dp"
                    android:textStyle="bold" />




            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>